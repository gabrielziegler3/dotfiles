# Audio/Volume controls
# increase sound volume
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +3%
# decrease sound volume
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -3%
# toggle mute
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle
# bindsym XF86AudioMute exec --no-startup-id amixer -q sset Master toggle

# Keyboard Brightness controls
bindsym XF86KbdBrightnessUp exec --no-startup-id  ~/.scripts/keyboard-backlight.sh +1 # increase keyboard brightness
bindsym XF86KbdBrightnessDown exec --no-startup-id  ~/.scripts/keyboard-backlight.sh -1 # decrease keyboard brightness

# Monitor Brightness controls
bindsym XF86MonBrightnessUp exec light -A 3
bindsym XF86MonBrightnessDown exec light -U 3
bindsym XF86ScreenSaver exec light -S 0

# Media player controls
bindsym XF86AudioPause exec playerctl --player=spotify play-pause
bindsym XF86AudioNext exec playerctl --player=spotify next
bindsym XF86AudioPrev exec playerctl --player=spotify previous

